{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends":[ "standard-with-typescript",   "plugin:prettier/recommended"],
  "overrides": [
  ],
  "plugins": [
      "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "rules": {
      "prettier/prettier": "error",
      "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never",
            "tsx": "never"
          }
        ]
  },
  "settings": {
      "import/resolver": {
        "typescript": {}
      }
  }
}
